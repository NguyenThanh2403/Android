<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/Math1"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_below="@+id/Math1"
        android:gravity="end"
        android:padding="20dp"
        android:text=""
        android:fontFamily="@font/caiso"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <Spinner
        android:id="@+id/Math2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tvInput" />

    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Math2"
        android:background="@color/black"
        android:gravity="end"
        android:padding="20dp"
        android:text="0"
        android:fontFamily="@font/caiso"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnCE"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvOutput"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="CE"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnCE"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn7"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn4"
        android:layout_marginTop="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btnES"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="ES"
        android:layout_toRightOf="@id/btnCE"
        android:layout_below="@+id/tvOutput"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btn8"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="8"
        android:layout_toRightOf="@id/btnCE"
        android:layout_below="@+id/btnES"
        android:textColor="@color/white"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/btn5"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="5"
        android:layout_toRightOf="@id/btnCE"
        android:layout_below="@+id/btn8"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btn2"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="2"
        android:layout_toRightOf="@id/btnCE"
        android:layout_below="@+id/btn5"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tvOutput"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@id/btnES"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="9"
        android:layout_toRightOf="@id/btnES"
        android:layout_below="@+id/btn0"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btn6"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="6"
        android:layout_toRightOf="@id/btnES"
        android:layout_below="@+id/btn9"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btn6"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_toRightOf="@id/btnES"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="25sp" />
    <Button
        android:id="@+id/btnCham"
        android:layout_width="134dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/black"
        android:fontFamily="@font/caiso"
        android:text="."
        android:layout_toRightOf="@id/btn1"
        android:layout_below="@+id/btn2"
        android:textColor="@color/white"
        android:textSize="25sp" />


</RelativeLayout>